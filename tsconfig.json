{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": [
        "src/types/*",
        "node_modules/*",
      ]
    }
  },
  "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
}
